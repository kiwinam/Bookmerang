<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:id="@+id/loginActivity"
    android:weightSum="100"
    android:elevation="1dp">
    <LinearLayout
        android:layout_weight="50"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="40">
        <View
            android:layout_weight="20"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>

        <ImageView
            android:layout_weight="10"
            android:src="@drawable/logo"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/imageView" />

        <View
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>
        <TextView
            android:text="\'교재는 돌아오는거야\'"
            android:textSize="12sp"
            android:textColor="#747474"
            android:textStyle="italic"
            android:gravity="center"
            android:layout_weight="5"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <TextView
            android:text="팔고,사고 중고 교재 마켓 - 북메랑"
            android:textSize="12sp"
            android:textColor="#000"
            android:gravity="center"
            android:layout_weight="5"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_weight="50"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="100"
        android:orientation="vertical">
        <View
            android:layout_weight="40"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <LinearLayout
            android:layout_weight="17"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_height="0dp">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <Button
                android:layout_weight="3.5"
                android:id="@+id/gotoLogin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_joinlogin_select"
                android:text="로그인"
                android:textColor="#3498db"
                android:layout_marginBottom="5dp"
                android:textSize="12dp"
                android:elevation="2dp"/>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <Button
                android:layout_weight="3.5"
                android:id="@+id/gotoJoin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_joinlogin_select"
                android:text="회원가입"
                android:textColor="#3498db"
                android:layout_marginBottom="5dp"
                android:textSize="12dp"
                android:elevation="2dp"/>


            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="25"
            android:layout_width="match_parent"
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_height="0dp"/>

        <LinearLayout
            android:layout_weight="15"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="10">
            <View
                android:layout_weight="0.8"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:layout_weight="8.4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="회원가입 함으로써 북메랑의 "
                        android:textSize="12sp"
                        android:textColor="#747474"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/link_rule"
                        android:text="이용 약관"
                        android:textSize="12sp"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:autoLink="all" />
                    <TextView
                        android:text=" , "
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/link_person"
                        android:text="개인정보 보호 정책"
                        android:textSize="12sp"
                        android:textColor="#000"
                        android:autoLink="all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="에"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="동의하는것으로 간주됩니다."
                        android:textSize="12sp"
                        android:textColor="#747474"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_weight="0.8"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="5"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

    </LinearLayout>
</LinearLayout>
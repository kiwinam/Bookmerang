<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/main_bottom_border"
        android:elevation="2dp"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="0dp"

            android:layout_height="wrap_content"
            android:layout_weight="0.3" />

        <LinearLayout
            android:id="@+id/setting_BackBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/goBack"
                android:src="@drawable/ic_arrow_back_blue_24dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="설정"
            android:textAlignment="center"
            android:textColor="#3498db"
            android:textSize="14dp"
            android:id="@+id/textView" />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="92"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="10">
            <View
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:text="메시지 알림 받기"
                android:textSize="16sp"
                android:layout_weight="5"
                android:gravity="center|start"
                android:textColor="#747474"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <View
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <Switch
                android:layout_weight="2"
                android:layout_width="0dp"
                android:checked="true"
                android:gravity="center"
                android:layout_height="match_parent" />
            <View
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <View
            android:background="#747474"
            android:layout_width="match_parent"
            android:layout_marginTop="0.5dp"
            android:layout_marginBottom="0.5dp"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:id="@+id/setting_agree"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="10">
            <View
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:text="이용 약관"
                android:textSize="16sp"
                android:layout_weight="5"
                android:gravity="center|start"
                android:textColor="#747474"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <View
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="center|right"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/ic_keyboard_arrow_right_gray_24dp"
                    android:layout_width="24dp"
                    android:gravity="center"
                    android:layout_height="24dp" />
            </LinearLayout>

            <View
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <View
            android:background="#747474"
            android:layout_width="match_parent"
            android:layout_marginTop="0.5dp"
            android:layout_marginBottom="0.5dp"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:id="@+id/setting_securite"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="10">
            <View
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:text="개인정보 취급 방침"
                android:textSize="16sp"
                android:layout_weight="5"
                android:gravity="center|start"
                android:textColor="#747474"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <View
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="center|right"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/ic_keyboard_arrow_right_gray_24dp"
                    android:layout_width="24dp"
                    android:gravity="center"
                    android:layout_height="24dp" />
            </LinearLayout>
            <View
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <View
            android:background="#747474"
            android:layout_width="match_parent"
            android:layout_marginTop="0.5dp"
            android:layout_marginBottom="0.5dp"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:id="@+id/dropOut"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="10">
            <View
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:text="계정 탈퇴"
                android:textSize="16sp"
                android:textColor="#747474"
                android:layout_weight="5"
                android:gravity="center|start"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <View
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="center|right"
                android:layout_height="match_parent">

            </LinearLayout>
            <View
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <View
            android:background="#747474"
            android:layout_width="match_parent"
            android:layout_marginTop="0.5dp"
            android:layout_marginBottom="0.5dp"
            android:layout_height="0.5dp"/>
    </LinearLayout>

</LinearLayout>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#3498db</item>
        <item name="colorControlNormal">#3498db</item>
        <item name="colorControlActivated">#3498db</item>
        <item name="android:selectableItemBackground">@drawable/pre_lollipop_selectable_item</item>
        <item name="colorControlHighlight">@color/color_control_highlight</item>
    </style>

    <style name="Toolbar" parent="AppTheme">
        <!-- Toolbar Title Color -->
        <item name="android:textColorPrimary">#3498db</item>

        <!-- Toolbar Up Button Color -->
        <item name="android:textColorSecondary">#3498db</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>
</resources>

